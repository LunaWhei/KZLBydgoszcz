@model KZLBydgoszcz.Models.Lessons

@{
    ViewData["Title"] = "Edycja";
}

<h1>Edytuj</h1>

<h4>Zajęcia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LessonID" />
            <div class="form-group">
                <label asp-for="LessonName" class="control-label"></label>
                <input asp-for="LessonName" class="form-control" />
                <span asp-validation-for="LessonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student_classID" class="control-label"></label>
                <select asp-for="Student_classID" class="form-control" asp-items="ViewBag.Student_classID"></select>
                <span asp-validation-for="Student_classID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeachersId" class="control-label"></label>
                <select asp-for="TeachersId" class="form-control" asp-items="ViewBag.TeachersId"></select>
                <span asp-validation-for="TeachersId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
