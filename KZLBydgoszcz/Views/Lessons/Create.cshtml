@model KZLBydgoszcz.Models.Lessons

@{
    ViewData["Title"] = "Dodaj";
}

<h1>Dodawanie</h1>

<h4>Lekcji</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LessonName" class="control-label"></label>
                <input asp-for="LessonName" class="form-control" />
                <span asp-validation-for="LessonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student_classID" class="control-label"></label>
                <select asp-for="Student_classID" class="form-control" asp-items="ViewBag.Student_classID"></select>
            </div>
            <div class="form-group">
                <label asp-for="TeachersId" class="control-label"></label>
                <select asp-for="TeachersId" class="form-control" asp-items="ViewBag.TeachersId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
            <div><p>Nie masz jeszcze żadnej klasy? Dodaj nową klasę <a asp-area="" asp-controller="Class_Name" asp-action="Create">tutaj</a></p></div>
            <div><p>Nie masz jeszcze żadnego nauczyciela? Dodaj nową klasę <a asp-area="" asp-controller="Teachers" asp-action="Create">tutaj</a></p></div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
